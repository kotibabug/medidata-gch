<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BuildProfileActivity">

    <TextView
            android:id="@+id/text_build_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Build Your Profile"
            style="@style/Header"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/text_conditions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Have you been diagnosed with following conditions?"
            style="@style/Question"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_build_profile" />

</android.support.constraint.ConstraintLayout>