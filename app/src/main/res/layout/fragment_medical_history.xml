<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BuildProfileActivity">

    <TextView
            android:id="@+id/text_build_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Build Your Profile"
            style="@style/Header"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/image_wellness"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_build_profile"
            android:layout_marginTop="40dp" />

    <TextView
            android:id="@+id/text_blood_pressure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="What was your last blood pressure reading?"
            style="@style/Question"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_wellness" />

    <LinearLayout
            android:id="@+id/layout_bloodpressure_edit"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_blood_pressure">

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="/"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

    </LinearLayout>

    <TextView
            android:id="@+id/text_cholesterol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="What was your last cholesterol level reading?"
            style="@style/Question"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_bloodpressure_edit" />

    <EditText
            android:id="@+id/edit_smoking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Smoking"
            app:layout_constraintTop_toBottomOf="@id/text_cholesterol"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp" />

    <TextView
            android:id="@+id/text_heartrate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="What was your last heart reading?"
            style="@style/Question"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_smoking" />

    <EditText
            android:id="@+id/edit_heartrate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Heart Rate"
            app:layout_constraintTop_toBottomOf="@id/text_heartrate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp" />

    <TextView
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LoginButton"
            android:text="Next"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>