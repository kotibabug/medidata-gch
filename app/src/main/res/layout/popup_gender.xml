<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/constraint_mdpopup_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:elevation="5dp">

    <TextView
            android:id="@+id/text_mdpopup_title"
            android:textSize="20sp"
            android:text="Select Gender"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/text_mdpopup_male"
            android:textAlignment="textStart"
            android:gravity="start"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Male"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:textColor="@android:color/white"
            android:background="@color/active_blue"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_mdpopup_title" />

    <TextView
            android:id="@+id/text_mdpopup_female"
            android:textAlignment="textStart"
            android:gravity="start"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Female"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:textColor="@android:color/white"
            android:background="@color/active_blue"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_mdpopup_male" />

